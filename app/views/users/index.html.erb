<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1>User info</h1>
      <td><%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
      <h4>name</h4>
      <td><%= current_user.name %></td>
      <h4>Introduction</h4>
      <td><%= current_user.introduction %></td>
      <td><%= link_to 'Edit', edit_user_path(current_user.id), class: "btn btn-primary col-xs-12" %></td>

      <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <% end %>

      <h1>New book</h1>
      <!-- form_for部分 -->
      <%= form_for(@book) do |f| %>



      <% if @book.errors.any? %>
      <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>


      <h1>Books</h1>
      <h4>Title</h4>
      <%= f.text_field :title, class: "col-xs-12 book_title" %>

      <h4>Body</h4>
      <%= f.text_area :body, class: "col-xs-12 book_title" %>

      <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>

      <% end %>
    </div>
    <div class="col-lg-9">

      <h1>Users</h1>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% if @users.present? %>
          <% @users.each do |f| %>
          <tr>
            <td><%= attachment_image_tag f, :profile_image, :fill, 50, 50, format: 'jpeg' %></td>
            <td><%= f.name %></td>
            <td><%= link_to "show" , user_path(f.id) %></td>
          </tr>
          <% end %>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>