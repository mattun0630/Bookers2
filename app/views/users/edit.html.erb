<h1>User info</h1>
<!-- form_for部分 -->
<%= form_for(@user) do |f| %>
    <h4>Name</h4>
    <%= f.text_field :name %>
    <h4>Image</h4>
    <%= f.attachment_field :profile_image %>
    <h4>introduction</h4>
    <%= f.text_area :introduction %>
    <%= f.submit 'Update User' %>
<% end %>

<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>